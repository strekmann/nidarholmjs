doctype html

mixin permission_options(groups, users)
  optgroup(label="Alle")
    option(value="p") Verden
  optgroup(label="Grupper")
    for group in groups
      if group
        option(value="g-"+group.id)= group.name
  optgroup(label="Personer")
    for friend in users
      if friend
        option(value="u-"+friend.id)= friend.name

html(lang=lang dir=lang_dir)
    head
        meta(charset="utf-8")
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="author" content="Strekmann")
        link(href="/css/site.css" rel="stylesheet")

        //if lt IE 9
            script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')

        script(src="/js/modernizr.js")
        link(rel="shortcut icon" href="/img/favicon.png")

    body
        a(id="logobtn" href="/")
        .contain-to-grid
            nav.top-bar(data-topbar)
                ul.title-area
                    li.name
                        h1
                            a(href="/") nidarholm
                    li.toggle-topbar.menu-icon
                        a(href="#")
                            span

                section.top-bar-section
                    ul.right
                        li
                            a(href="/projects") Prosjekter
                        li
                            a(href="/members") Medlemmer
                        li
                            a(href="#") Om nidarholm
                        if user
                            li
                                a#topbar-username(href="#")= user.username
                            li
                                a(href="/logout") log out
                        else
                            li
                                a(href="/login") log in

        .row#flash
            .large-12.columns
                if messages.error
                    each message in messages.error
                        .alert-box.alert= message
                if messages.warning
                    each message in messages.warning
                        .alert-box.warning= message
                if messages.success
                    each message in messages.success
                        .alert-box.success= message
                if messages.info
                    each message in messages.info
                        .alert-box.info= message

        block content

        script(src="/js/vendor.js")
        script(src="/js/site.js")

        script.
            $(document).foundation();

        block javascript
