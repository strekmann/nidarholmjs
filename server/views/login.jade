extends layouts/main

block content
  section#login
    .row
      .medium-6.medium-centered.columns
        form(method="post")
          .row
            .small-12.columns
              h2= __('Logg inn')
          .row
            .small-12.columns.float-labels
              label(for="username")= __('Username')
              input(type="text" placeholder="Username" id="username" name="username" required)
          .row
            .small-12.columns.float-labels
              label(for="password") Password
              input(type="password" placeholder="Password" id="password" name="password" required pattern="^\\S+")
          .row
            .small-12.columns
              button.small(type="submit") Log in
    .row
      .medium-6.medium-centered.columns.text-center
        | - ELLER -
    .row
      .medium-6.medium-centered.columns
        form(method="post" action="/register" data-abide)
          .row
            .small-12.columns
              h2 Registrer
          .row
            .small-12.columns.float-labels
              label(for="name") Name
              input(type="text" placeholder="Full name" id="name" name="name" required)
              small.error Name is required
          .row
            .small-12.columns.float-labels
              label(for="desired_username") Username
              input(type="text" placeholder="Username" id="desired_username" name="desired_username" required)
              small.error Username is required and must be unique
          .row
            .small-12.columns.float-labels
              label(for="password1") Password
              input(type="password" placeholder="Password" id="password1" name="password1" required)
              small.error Password must be at least 8 letters long and include at least one digit and one uppercase letter
          .row
            .small-12.columns.float-labels
              label(for="password2") Password again
              input(type="password" placeholder="Password" id="password2" name="password2" required data-equalto="password1")
              small.error Must be the same as the one above
          .row
            .small-12.columns
              button.small(type="submit") Register
