extends ../layouts/main

block content
  section
    div.row
      div.columns
        ul.right
          li
            a(href="/users") Alle registrerte
          li
            a(href="/groups") Alle grupper
          li
            a(href="/members/new") Legg til medlem

    div.row
      div.small-12.columns#memberlist
        h1= org._id

        p= org.member_group

        for group in org.instrument_groups
          .group(data-id=group.id)
            h2
              = group.name
              a.removegroup(href="#")
                i.fa.fa-minus
            for member in group.members
              if member
                div.member
                  if member.user
                    a(href="/users/" + member.user.username)
                      = member.user.name
                  if member.role
                    div
                      if member.role
                        = member.role

    div.row
      div.small-12.columns
        #addgroup
          button.new_group.small
            i.fa.fa-plus
          form
            .row
              .columns
                h2 Legg til ny instrumentgruppe
            .row
              .columns
                label(for='name') navn p√• gruppe
                input#name(type='text')
            .row
              .columns.text-right
                button.reset.secondary(type='reset') avbryt
                button lagre

block javascript
  script.
    require('s7n').organization.memberlistView();
